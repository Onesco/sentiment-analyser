{
    "display": "Node LTS",
    "_version": "18.1.0",
    "compilerOptions": {
      "lib": ["es2023", "DOM"],
      "module": "node16",
      "target": "es2022",
      "outDir": "build",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node16",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": [
      "src"
    ]
}